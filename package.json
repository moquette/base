{
  "name": "base",
  "version": "1.0.2",
  "description": "A Minimalist React boilerplate for TypeScript Projects.",
  "homepage": "https://base.moquette.us/",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Joaquin A. Moquette",
    "email": "moquette@gmail.com",
    "url": "https://github.com/moquette"
  },
  "main": "index.tsx",
  "scripts": {
    "start": "webpack serve",
    "build": "rimraf ./build && cross-env NODE_ENV=production webpack",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|json|css|md)\" --write",
    "type-check": "tsc",
    "isReady": "yarn format && yarn lint:fix && yarn tsc",
    "analyzer": "cross-env NODE_ENV=production webpack --profile --json > ./build/profile.json && webpack-bundle-analyzer ./build/profile.json",
    "update-dependencies": "yarn upgrade-interactive",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-github-corner": "^2.5.0",
    "react-router-dom": "6.2.2"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.4",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "autoprefixer": "^10.4.4",
    "babel-loader": "8.2.3",
    "commitizen": "4.2.4",
    "cross-env": "7.0.3",
    "css-loader": "6.7.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "postcss": "^8.4.12",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-nesting": "^10.1.3",
    "postcss-preset-env": "^7.4.2",
    "prettier": "2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "process": "0.11.10",
    "react-refresh": "0.11.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "sass-loader": "12.6.0",
    "style-loader": "3.3.1",
    "tailwindcss": "^3.0.23",
    "ts-node": "10.7.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "4.6.2",
    "webpack": "5.70.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@3.2.0"
}
